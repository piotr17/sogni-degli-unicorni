---
layout: base
preloads:
  href: '/assets/fonts/robotomono/robotomono-variablefont_wght-webfont.woff2'
  as: 'font'
  type: 'font/woff2'
  crossorigin: true
---

<!-- Schema.org per SEO -->
{% include "schemas/story-schema.njk" %}

<article class="region story-post" data-temp="{{ temp }}" itemscope itemtype="https://schema.org/CreativeWork">
  <div class="wrapper flow prose">
    
    <!-- Header della storia -->
    <header class="story-header">
      <h1 class="gradient-text story-title" itemprop="name">{{ title }}</h1>
      
      <!-- Meta informazioni -->
      <div class="story-meta">
        {% set definedDate = date %} {% include "partials/date.njk" %}
        {% if style %}
          <span class="story-style">Stile: {{ style }}</span>
        {% endif %}
        <span class="reading-time">‚è±Ô∏è Tempo di lettura: ~5 min</span>
      </div>
      
      <!-- Descrizione per SEO -->
      {% if description %}
        <div class="story-description" itemprop="description">
          <p>{{ description }}</p>
        </div>
      {% endif %}
    </header>

    <!-- Immagine principale -->
    {% if image %}
      <figure class="story-image">
        <img src="{{ image }}" alt="{{ title }}" loading="lazy" itemprop="image" />
      </figure>
    {% endif %}

    <!-- Contenuto della storia -->
    <div class="story-content" itemprop="text">
      {{ content | safe }}
    </div>

    <!-- Collegamento al disegno da colorare specifico -->
    {% set storySlug = title | lower | replace(" ", "-") | replace("'", "") | replace(":", "") | replace(",", "") %}
    {% set relatedColoring = null %}
    {% for coloring in collections.posts %}
      {% set coloringSlugCompare = coloring.data.title | lower | replace(" ", "-") | replace("'", "") | replace(":", "") | replace(",", "") %}
      {% if coloringSlugCompare == storySlug and coloring.data.tags and "unicornidacolorare" in coloring.data.tags %}
        {% set relatedColoring = coloring %}
      {% endif %}
    {% endfor %}
    
    {% if relatedColoring %}
    <div class="coloring-link">
      <h3>üé® Colora questa storia!</h3>
      <p>Vuoi colorare i personaggi di questa storia? Abbiamo il disegno perfetto per te!</p>
      <a href="{{ relatedColoring.url }}" class="btn btn-coloring">Colora "{{ title }}"</a>
    </div>
    {% endif %}

    <!-- Link incrociati ai disegni da colorare -->
    <section class="cross-links">
      <h3>üé® Altri disegni da colorare</h3>
      <div class="cross-links-grid">
        {% for item in collections.disegniDaColorare %}
          {% if item.url != relatedColoring.url %}
          <a href="{{ item.url }}" class="cross-link-item">
            <span class="cross-link-title">{{ item.data.title }}</span>
          </a>
          {% endif %}
        {% endfor %}
      </div>
    </section>

    <!-- Footer della storia -->
    <footer class="story-footer">
      <div class="story-tags">
        {% if tags and tags.length > 0 %}
          <span class="tags-label">üè∑Ô∏è Categorie:</span>
          {% for tag in tags %}
            {% if tag != "posts" %}
              <span class="tag">{{ tag }}</span>
            {% endif %}
          {% endfor %}
        {% endif %}
      </div>
      
      <!-- Call to action -->
      <div class="story-cta">
        <p>‚ú® <strong>Ti √® piaciuta questa storia?</strong> Scopri altre magiche avventure degli unicorni!</p>
        <a href="/storie/" class="btn btn-secondary">Leggi altre storie</a>
      </div>
    </footer>

  </div>
</article>



