<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CreativeWork",
  "@id": "{{ meta.url }}{{ page.url }}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ meta.url }}{{ page.url }}"
  },
  "headline": "{{ title }}",
  "name": "{{ title }}",
  "description": "{{ description or meta.siteDescription }}",
  {% if image %}
  "image": {
    "@type": "ImageObject",
    "url": "{{ meta.url }}{{ image }}",
    "width": 800,
    "height": 600
  },
  {% endif %}
  "author": {
    "@type": "Person",
    "name": "{{ meta.authorName }}",
    "url": "{{ meta.url }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "{{ meta.siteName }}",
    "url": "{{ meta.url }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ meta.url }}/assets/images/favicon/android-chrome-192x192.png"
    }
  },
  "datePublished": "{{ date | toIsoString }}",
  "dateModified": "{{ date | toIsoString }}",
  "inLanguage": "{{ meta.locale }}",
  "genre": "Fiaba per bambini",
  "audience": {
    "@type": "Audience",
    "audienceType": "Bambini",
    "suggestedMinAge": 3,
    "suggestedMaxAge": 10
  },
  "keywords": "{% if tags %}{{ tags | join(', ') }}, {% endif %}unicorni, fiabe, storie per bambini, racconti magici",
  "about": {
    "@type": "Thing",
    "name": "Unicorni",
    "description": "Creature magiche protagoniste di fiabe per bambini"
  },
  "isPartOf": {
    "@type": "WebSite",
    "@id": "{{ meta.url }}#website"
  }
}
</script>